<h1>Your Current Mobile Phones</h1>

<table class="table">
  <thead>
    <tr>
      <th>Label</th>
      <th>Number</th>
      <th>Carrier</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @mobile_phones.each do |mobile_phone| %>
    <tr>
      <td><%= mobile_phone.label %></td>
      <td><%= number_to_phone(mobile_phone.number) %></td>
      <td><%= SMSFu.carrier_name(mobile_phone.carrier) %></td>
      <td><%= link_to 'Show', mobile_phone %>
      <%= link_to 'Edit', edit_mobile_phone_path(mobile_phone) %>
      <%= link_to 'Destroy', mobile_phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'Create New Mobile Phone', new_mobile_phone_path %>
